{% extends 'base.html.twig' %}

{% block title %}Foody | Profil > {{ user.pseudo }}{% endblock %}

{% block body %}
    <div class="row valign-wrapper center-align" style="margin-top:2em;">
        {% if user.imageName %}
            <div class="col s4">
            <img src="{{ asset('uploads/images/users/'~user.imageName)}}" class="responsive-img circle z-depth-5 materialboxed ">
            </div>
        {% else %}
            <img src="{{ asset('build/images/defaultUser.png')}}" class="responsive-img circle z-depth-5 materialboxed ">
        {% endif %}
    </div>
    <div class="row valign-wrapper ">
        <h5 class="center-align col s12">{{ user.pseudo }}</h5>
    </div>

    <div class="row valign-wrapper">
        <div class=" col s5 right-align">
            <a class="btn btn-primary red lighten-1 ">{{ user.recipes | length }} recettes</a>
        </div>
        <div class=" col s3 center-align">
            <a class="btn btn-primary red lighten-1" href={{ path('app_front_profile_show_follow', {'username': user.username, 'bool':1}) }}>{{ user.followers | length }} abonnés</a>
        </div>
        <div class=" col s5 left-align">
            <a class="btn btn-primary red lighten-1 center-align col s5" href={{ path('app_front_profile_show_follow', {'username': user.username, 'bool':2}) }}>{{ user.followeds | length }} abonnements</a>
        </div>
    </div>



    <table class="table">
        <tbody>
        <tr>
            <th>Biographie</th>
            <td>{{ user.biography | raw }}</td>
        </tr>
        </tbody>
    </table>
    {% if not app.user is same as (user) %}
    <a class="btn btn-primary" href="{{ path( follow.path , {'username': user.username , "csrf_token" : csrf_token('follow')}) }}">{{ follow.title }}</a>
    {% endif %}

    {% if app.user == user %}
        <a class="btn-floating btn-large grey lighten-2" href="{{ path('app_front_profile_edit', {'id': user.id}) }}"><i data-feather="edit" id="" stroke-width="2" stroke="white"></i></a>

        {{ include('front/profile/_delete_form.html.twig') }}
    {% endif %}

    <h1>Recettes</h1>
    <div class="d-flex bd-highlight justify-content-center">
        <div class="row">
    {% for recipe in user.recipes %}

        <div class="d-flex justify-content-center col-lg-4" style="width: 15em;">
            <a href="/recipe/{{ recipe.id }}-{{ recipe.slug }}">
                {% if recipe.imageName %}
                    <img class="card-img-top" src="{{ asset('uploads/images/recipes/'~recipe.imageName)}}">
                {% else %}
                    <img class="card-img-top" src="{{ asset('build/images/defaultRecipe.png')}}">
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ recipe.title }}</h5>
                    <p> Catégorie(s) :
                        {% for category in recipe.categories %}
                            {{ category.name }}
                        {% endfor %}
                    </p>
                </div>
            </a>
        </div>
    {% endfor %}
        </div>
    </div>

{% endblock %}
