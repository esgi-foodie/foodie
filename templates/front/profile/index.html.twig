{% extends 'base.html.twig' %}

{% block title %}Foody | Profile > {{ user.pseudo }}{% endblock %}

{% block body %}
    <h1>{{ user.pseudo }}</h1>


    <table class="table">
        <tbody>
        <tr>
            <th>Pseudo</th>
            <td>{{ user.pseudo }}</td>
        </tr>
        <tr>
            <th>Biography</th>
            <td>{{ user.biography }}</td>
        </tr>
        </tbody>
    </table>


    {% for follower in app.user.followers %}
        {{ follower }}
    {% endfor %}
    {% if (true)  %}
        <a class="btn btn-primary" href="{{ user.username }}/unfollow">Unfollow</a>
    {% else %}
        <a class="btn btn-primary" href="{{ user.username }}/follow">Follow</a>
    {% endif %}


{% endblock %}
